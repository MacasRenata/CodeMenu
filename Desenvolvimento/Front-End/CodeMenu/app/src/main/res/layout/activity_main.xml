<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CED1"
    tools:context="com.example.manuygabi.codemenu.MainActivity">


    <Button
        android:id="@+id/pedido"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:text="PEDIDO"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|center_horizontal"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="170dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sair"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="SAIR"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pedido"
        android:layout_marginTop="94dp"
        app:layout_constraintTop_toBottomOf="@+id/pedido"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pedido" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CodeMenu"
        android:textSize="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintVertical_bias="0.129"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />


    <Button
        android:id="@+id/cardapio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CARDÁPIO"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pedido"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="@+id/pedido"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp" />

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        android:layout_height="0dp"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pagamento"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="PAGAMENTO "


        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/cardapio"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/cardapio"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/cardapio" />

</android.support.constraint.ConstraintLayout>
